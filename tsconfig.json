{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "lib": ["ES2021", "DOM", "esnext"],
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "./src/types"],
    "removeComments": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
        "@types/*": ["types/*"],
        "@constants/*": ["constants/*"],
        "@context/*": ["context/*"],
        "@views/*": ["views/*"],
        "@utilities/*": ["utilities/*"],
        "@locales/*": ["../locales/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
